<Window x:Class="LauncherDL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LauncherDL"
        xmlns:DLControl="clr-namespace:DLControls;assembly=guicomp"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        Title="Launcher DL"
        Height="560"
        Width="900"
        Effect="{StaticResource WindowDropShadow}"
        FontFamily="{StaticResource DefaultFont}">

	<Window.TaskbarItemInfo>
		<TaskbarItemInfo x:Name="_TaskbarProgressBar" ProgressState="Normal" />
	</Window.TaskbarItemInfo>

	<WindowChrome.WindowChrome>
		<WindowChrome GlassFrameThickness="0"
                                    CornerRadius="0"
                                    CaptionHeight="0"
                                    UseAeroCaptionButtons="False"
                                    ResizeBorderThickness="7" />
	</WindowChrome.WindowChrome>

	<!--#region Window style -->
	<Window.Resources>
		<Style TargetType="Border">
			<Setter Property="CornerRadius" Value="10" />
		</Style>
	</Window.Resources>
	<!--#endregion-->

	<Border x:Name="_windowInnerBG" Background="Black" Margin="10,10,10,10" CornerRadius="10">
		<Border Focusable="True">
			<Border.Background>
				<ImageBrush ImageSource="pack://siteoforigin:,,,/Images/background.jpg" Opacity="0.5"/>
			</Border.Background>
			<Canvas x:Name="_windowCanvas" RenderOptions.BitmapScalingMode="Fant" RenderOptions.EdgeMode="Aliased">
				<Border Background="#A34F002F" CornerRadius="10,10,0,0" Height="35" Opacity="1" x:Name="_windowDrag" Width="880">
					<Grid>

						<Image IsHitTestVisible="False" Source="{Binding Source={x:Static DLControl:DLStrings.Icon}}" Margin="8,0,851,0"/>
						<TextBlock Text="Launcher DL" Foreground="White" FontWeight="Medium"  FontSize="14" Padding="34,6.5,0,0" IsHitTestVisible="False"/>

						<Button x:Name="_CloseButton"
                                        Content="✕"
                                        Style="{StaticResource ExitButtonAlt}"
                                        Margin="830,0,0,0" />

						<Button x:Name="_Minimize"
                                        Content="—"
                                        Style="{StaticResource MinimizeButtonAlt}"
                                        Margin="780,0,50,0" />

					</Grid>
				</Border>

				<!-- Texbox w/ Text labels -->
				<DLControl:TextBlockControl x:Name="_textBlockLink" Canvas.Top="69" Canvas.Left="310" Text="Link" Width="90" HorizontalAlignment="Left"/>
				<DLControl:TextBoxControl x:Name="_textBoxLink" Width="440" Canvas.Top="67" Canvas.Left="415" HorizontalAlignment="Left" VerticalAlignment="Center"/>
				<DLControl:TextBlockControl x:Name="_textBlockFormat" Canvas.Top="122" Canvas.Left="310" Text="Format" Width="90" HorizontalAlignment="Left"/>
				<DLControl:ComboBoxControl x:Name="_comboBoxFormat" Canvas.Top="117" Canvas.Left="415" Width="440" TextEditable="True"/>
				<DLControl:TextBlockControl x:Name="_textBlockName" Canvas.Top="173" Canvas.Left="310" Text="Name" Width="90" HorizontalAlignment="Left"/>
				<DLControl:TextBoxControl x:Name="_textBoxName" Width="440" Canvas.Top="171" Canvas.Left="415"/>

				<!-- Buttons -->
				<DLControl:ButtonControl x:Name="_buttonFileFormat" Margin="24,140,556,261"/>
				<DLControl:ButtonControl x:Name="_buttonDownload" Margin="24,216,556,183"/>
				<DLControl:ButtonControl x:Name="_buttonUpdate" Margin="24,294,556,105"/>
				<DLControl:ButtonControl x:Name="_buttonOpenFile" Margin="24,372,556,29"/>
				<DLControl:ButtonControl x:Name="_buttonMetadata" Margin="24,450,556,29"/>

				<!-- Console -->
				<DLControl:ConsoleControl x:Name="_console" ConsoleHeight="273" ConsoleWidth="555" Margin="300,231,27,57"/>

				<!-- Type -->
				<DLControl:TextBlockControl x:Name="_textBlockType" Canvas.Top="50" Canvas.Left="70" Text="Download Type" Width="157" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<DLControl:ComboBoxControl x:Name="_comboBoxType" Canvas.Left="66" Canvas.Top="84" Width="166" TextEditable="False"/>

				<!-- Footer -->
				<TextBlock x:Name="_textBlockFooter" FontSize="10" FontWeight="Medium" Foreground="White" FontFamily="{StaticResource DefaultFont}" Canvas.Top="523" Height="17" Width="298" Canvas.Left="10"/>
			</Canvas>
		</Border>
	</Border>
</Window>
